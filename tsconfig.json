{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {

        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
