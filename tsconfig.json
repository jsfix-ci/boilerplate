{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "jsxFactory": "dom",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}
