{
    "runner": "jest-runner",
    "displayName": "test:unit",
    "rootDir": "../",
    "verbose": true,
    "notify": true,
    "bail": false,
    "collectCoverage": true,
    "collectCoverageFrom": [
        "<rootDir>/src/bus/**/*.{js,jsx}",
        "<rootDir>/src/bus/ui/*.{js,jsx}",
        "<rootDir>/src/init/store.js"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/build/",
        "/coverage/",
        "/styles/",
        "<rootDir>/src/index.js",
        "<rootDir>/src/init/middleware",
        "<rootDir>/src/pages/index.js",
        "<rootDir>/src/views/index.js",
        "<rootDir>/src/components/index.js",
        "<rootDir>/src/models/intl/sagas/workers/index.js"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 1,
            "functions": 1,
            "lines": 1,
            "statements": 1
        }
    },
    "modulePaths": ["<rootDir>/src", "<rootDir>/node_modules"],
    "moduleFileExtensions": ["js", "json", "css", "ts", "tsx"],
    "setupFiles": ["<rootDir>/jest/scripts/setupFiles.js"],
    "setupTestFrameworkScriptFile":
        "<rootDir>/jest/scripts/setupEnzymeEnvironment.js",
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "moduleNameMapper": {
        "\\.(css|m.css)$": "identity-obj-proxy",
        "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
            "<rootDir>/__mocks__/fileMock.js"
    },
    "testURL": "http://www.test.com"
}
